<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Basic employee record access rule -->
    <record id="hr_rule_employee_basic" model="ir.rule">
        <field name="name">Employee Basic Access</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- HR user access rule -->
    <record id="hr_rule_employee_hr_user" model="ir.rule">
        <field name="name">Employee HR User Access</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- HR manager access rule -->
    <record id="hr_rule_employee_hr_manager" model="ir.rule">
        <field name="name">Employee HR Manager Access</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Field-specific access rules -->
    <record id="hr_employee_field_hr_user" model="ir.model.access">
        <field name="name">HR Employee Fields HR User</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="group_id" ref="hr.group_hr_user"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
