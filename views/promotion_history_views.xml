<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Promotion History Tree View -->
    <record id="mda_hr_promotion_history_tree" model="ir.ui.view">
        <field name="name">mda.hr.promotion.history.tree</field>
        <field name="model">mda.hr.promotion.history</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Promotion History">
                <field name="employee_id"/>
                <field name="effective_date"/>
                <field name="new_salary_grade_level"/>
                <field name="new_rank"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Promotion History Form View -->
    <record id="mda_hr_promotion_history_form" model="ir.ui.view">
        <field name="name">mda.hr.promotion.history.form</field>
        <field name="model">mda.hr.promotion.history</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Promotion Record">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Promotion Details">
                            <field name="employee_id"/>
                            <field name="old_rank" readonly="1"/>
                            <field name="old_salary_grade_level" readonly="1"/>
                            <field name="new_rank"/>
                            <field name="new_salary_grade_level"/>
                        </group>
                        <group string="Dates &amp; Approval">
                            <field name="effective_date"/>
                            <field name="approval_date"/>
                            <field name="approved_by"/>
                        </group>
                    </group>
                    <separator string="Eligibility Check"/>
                    <group>
                        <group string="Promotion Eligibility Status">
                            <field name="is_promotion_eligible" readonly="1" widget="boolean_toggle"/>
                            <field name="promotion_eligibility_status" readonly="1" nolabel="1" colspan="2"/>
                        </group>
                    </group>
                    <group string="Remarks">
                        <field name="remarks" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Promotion History Action -->
    <record id="mda_hr_promotion_history_action" model="ir.actions.act_window">
        <field name="name">Promotion History</field>
        <field name="res_model">mda.hr.promotion.history</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No promotion records found
            </p>
        </field>
    </record>
</odoo>
